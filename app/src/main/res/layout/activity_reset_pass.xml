<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg3"
    tools:context="com.anandarherdianto.dinas.ResetPassActivity"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/lblReset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Masukan alamat email anda!"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="@android:color/black"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblReset"
        android:gravity="center"
        android:layout_marginTop="25dp">

        <EditText
            android:id="@+id/inputReset"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="email"
            />

        <com.anandarherdianto.dinas.util.FButton
            android:id="@+id/btnReset"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/inputReset"
            android:layout_marginTop="20dp"
            android:minHeight="50dp"
            android:minWidth="230dp"
            android:text="Kirim"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            app:cornerRadius="0dp"
            app:shadowEnabled="true"
            app:shadowHeight="3dp"
            app:buttonColor="#d2ececec"/>

        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnReset"
            android:layout_marginTop="60dp"
            android:background="@drawable/login_bg">

            <TextView
                android:id="@+id/txtInfoReset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Konfigurasi reset password akan dikirim ke email anda. Silakan periksa email anda!"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textColor="@android:color/black"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
